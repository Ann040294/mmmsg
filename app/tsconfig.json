{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@app/*": [
        "./app/*"
      ],
      "@pages/*": [
        "./pages/*"
      ],
      "@shared/*": [
        "./shared/*"
      ],
      "@widgets/*": [
        "./widgets/*"
      ],
      "@features/*": [
        "./features/*"
      ],
      "@entities/*": [
        "./entities/*"
      ]
    }
  },
  "references": [
    {
      "path": "../packages/ui-kit"
    }
  ],
  "include": [
    "./src"
  ],
  "exclude": [
    "dist"
  ]
}
